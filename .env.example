#======================================================================
# PENGATURAN APLIKASI UTAMA
#======================================================================
APP_NAME="G-Manager"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=localhost

#======================================================================
# PENGATURAN LOGGING
#======================================================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

#======================================================================
# KONEKSI DATABASE (POSTGRESQL)
#======================================================================
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=lrv_db
DB_USERNAME=postgres
DB_PASSWORD=MyS3cret!

#======================================================================
# DRIVER UNTUK CACHE, QUEUE, & SESSION
# Pastikan semua ini mengarah ke 'redis' untuk performa terbaik
#======================================================================
BROADCAST_CONNECTION=log
CACHE_STORE=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

#======================================================================
# KONFIGURASI REDIS
# `phpredis` adalah client default dan direkomendasikan.
# Pastikan ekstensi PHP `redis` sudah aktif di Laragon.
#======================================================================
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#======================================================================
# KONFIGURASI EMAIL
# `log` akan menyimpan email ke file log, aman untuk development.
#======================================================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

#======================================================================
# PENGATURAN LAINNYA
#======================================================================
FILESYSTEM_DISK=local

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"